<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:configChanges="orientation"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="0.47">

            <ImageView
                android:id="@+id/overlapImage"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="333dp"
                android:layout_marginLeft="333dp"

                android:layout_marginTop="3dp"
                android:layout_marginRight="9dp"
                android:layout_marginBottom="3dp"
                android:adjustViewBounds="true"
                android:background="@drawable/cestavacia" />

            <MultiAutoCompleteTextView
                android:id="@+id/multiAutoCompleteTextView"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Buscar"

                android:maxLines="1"
                android:textColor="@color/colorprincipal"
                android:textColorHint="@android:color/background_light"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtenviar"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentTop="true"

                android:layout_centerInParent="true"
                android:layout_marginStart="-29dp"
                android:layout_marginLeft="-29dp"
                android:layout_marginTop="17dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/overlapImage"
                android:layout_toRightOf="@+id/overlapImage"
                android:background="@drawable/tabcirculoverdecara"
                android:paddingLeft="10dp"
                android:text="18"
                android:textColor="@color/fbutton_color_belize_hole"
                android:textSize="24sp" />


        </RelativeLayout>
        <!--
            app:mtf_animationDuration="1000"
            app:mtf_cardColor="@color/cardview_dark_background"
            app:mtf_labelColor="@android:color/holo_red_dark"
            app:mtf_openKeyboardOnFocus="true"
            -->


        <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/maestraproductos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:background="@drawable/radial_gradient_bkg"
            android:scrollbars="vertical">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
</RelativeLayout>