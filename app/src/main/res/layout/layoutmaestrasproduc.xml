<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:configChanges="orientation"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="178dp"

            android:layout_weight="0.47">

            <RelativeLayout
                android:id="@+id/background"
                android:layout_width="145dp"
                android:layout_height="68dp"
                android:layout_alignStart="@+id/overlapImage"
                android:layout_alignLeft="@+id/overlapImage"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="150dp"
                android:layout_marginLeft="150dp"
                android:layout_marginBottom="86dp"
                android:background="@color/semiTransparentWhite"
                android:paddingRight="15dp">

            </RelativeLayout>

            <ImageView
                android:id="@+id/overlapImage"
                android:layout_width="70dp"
                android:layout_height="59dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="337dp"
                android:layout_marginLeft="337dp"

                android:layout_marginTop="9dp"
                android:adjustViewBounds="true"
                android:background="@drawable/cestavacia" />

            <TextView
                android:id="@+id/txtenviar"
                android:layout_width="31dp"
                android:layout_height="34dp"
                android:layout_alignParentTop="true"

                android:layout_centerInParent="true"
                android:layout_marginStart="-29dp"
                android:layout_marginLeft="-29dp"
                android:layout_marginTop="17dp"
                android:layout_toEndOf="@+id/overlapImage"
                android:layout_toRightOf="@+id/overlapImage"
                android:background="@drawable/tabcirculoverdecara"
                android:paddingLeft="10dp"
                android:text="18"
                android:textColor="@color/fbutton_color_belize_hole"
                android:textSize="24sp" />


        </RelativeLayout>
        <!--
            app:mtf_animationDuration="1000"
            app:mtf_cardColor="@color/cardview_dark_background"
            app:mtf_labelColor="@android:color/holo_red_dark"
            app:mtf_openKeyboardOnFocus="true"
            -->


        <MultiAutoCompleteTextView
            android:id="@+id/multiAutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buscar"

            android:textColor="@color/colorprincipal"
            android:textColorHint="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/maestraproductos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:scrollbars="vertical">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
</RelativeLayout>