<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="346dp"

            android:layout_weight="0.47">

            <RelativeLayout
                android:id="@+id/background"
                android:layout_width="357dp"
                android:layout_height="474dp"
                android:layout_alignStart="@+id/overlapImage"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="-30dp"
                android:layout_marginBottom="30dp"
                android:background="@color/semiTransparentWhite"
                android:paddingRight="15dp"
                android:layout_alignLeft="@+id/overlapImage"
                android:layout_marginLeft="-30dp">

            </RelativeLayout>

            <ImageView
                android:id="@+id/overlapImage"
                android:layout_width="121dp"
                android:layout_height="110dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="52dp"
                android:adjustViewBounds="true"
                android:background="@drawable/cestavacia"

                android:layout_alignParentLeft="true"
                android:layout_marginLeft="52dp" />

            <TextView
                android:id="@+id/txtenviar"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"

                android:layout_marginStart="-42dp"
                android:layout_marginLeft="-42dp"
                android:layout_marginTop="17dp"
                android:layout_toEndOf="@+id/overlapImage"
                android:layout_toRightOf="@+id/overlapImage"
                android:background="@drawable/tabcirculoverdecara"
                android:paddingLeft="10dp"
                android:text="18"
                android:textColor="@color/fbutton_color_belize_hole"
                android:textSize="24sp" />


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>